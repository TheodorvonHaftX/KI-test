                    githubIndicator.style.background = '#28a745';
                } else if (currentPlatform === 'gitlab' && gitlabIndicator) {
                    gitlabIndicator.style.background = '#28a745';
                }
            }, [currentPlatform]);

            return h('div', { className: "min-h-screen bg-gradient-to-br from-blue-400 via-blue-500 to-blue-600 p-4" },
                h('div', { className: `mx-auto max-w-6xl transition-all duration-300 ${windowMinimized ? 'h-12' : 'h-[90vh]'}` },
