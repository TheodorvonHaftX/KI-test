                                        h('div', { className: "space-y-4 fade-in" },
                                            h('div', { className: "bg-gradient-to-r from-blue-500/20 to-purple-500/20 rounded-lg p-4 border border-blue-400/30" },
                                                h('div', { className: "flex items-center space-x-2 mb-3" },
                                                    h('div', { className: "w-3 h-3 bg-green-400 rounded-full pulse-glow" }),
                                                    h('span', { className: "text-white font-semibold text-sm" },
                                                        `${functions[activeFunction].name} v2.0 - Enhanced Result`
                                                    ),
                                                    h('span', { className: `text-xs px-2 py-1 rounded ml-2 ${currentPlatform === 'github' ? 'bg-gray-700' : 'bg-orange-600'}` },
                                                        currentPlatform === 'github' ? 'GitHub' : currentPlatform === 'gitlab' ? 'GitLab' : 'Local'
                                                    )
                                                ),
                                                h('div', { 
                                                    className: "text-white/90 whitespace-pre-wrap text-sm leading-relaxed",
                                                    dangerouslySetInnerHTML: { __html: generatedContent.replace(/\n/g, '<br/>') }
                                                })
                                            )
                                        )
                                    :
                                        h('div', { className: "text-center text-slate-300 mt-20" },
                                            h('div', { className: "mb-4" },
                                                h(functions[activeFunction].icon, {
                                                    className: "w-16 h-16 mx-auto opacity-50",
                                                    style: { color: functions[activeFunction].color }
                                                })
                                            ),
                                            h('h3', { className: "text-lg font-semibold mb-2" },
                                                `${functions[activeFunction].name} v2.0`
                                            ),
                                            h('p', { className: "text-sm max-w-md mx-auto leading-relaxed mb-4" },
                                                "Enhanced AI-gest√ºtzte Multimedia-Funktionen mit Dual-Platform Integration."
                                            ),
                                            h('div', { className: "space-y-2 text-xs opacity-60" },
                                                h('div', {}, "üåê Verf√ºgbar auf GitHub Pages und GitLab Pages"),
                                                h('div', {}, "üîó theodorvonhaft.online Integration Ready"),
                                                h('div', {}, "‚ö° Enhanced Performance & Security")
                                            )
                                        )
                                )
                            )
                        )
                    )
                )
            );
        };

        ReactDOM.render(h(KiMonsterPhilippV2Enhanced), document.getElementById('root'));
    </script>
</body>
</html>
