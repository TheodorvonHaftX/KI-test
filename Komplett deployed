#!/bin/bash
# ===================================================================
# üöÄ Ki-Monster-Philipp v2.0 - KOMPLETTES DEPLOYMENT IN EINEM SCRIPT
# GitHub.com + GitLab.com + theodorvonhaft.online Integration
# ===================================================================

set -e  # Exit on any error

echo "üöÄ STARTING COMPLETE DEPLOYMENT - Ki-Monster-Philipp v2.0"
echo "========================================================="
echo "‚è∞ Start Time: $(date)"
echo ""

# ===================================================================
# SCHRITT 1: REPOSITORY SETUP UND KLONEN
# ===================================================================

echo "üìÇ SCHRITT 1: Repository Setup..."
echo "--------------------------------"

# Check if gh CLI is installed
if ! command -v gh &> /dev/null; then
    echo "‚ùå GitHub CLI (gh) ist nicht installiert!"
    echo "Installieren Sie es mit: https://cli.github.com/"
    exit 1
fi

# Clone repository
echo "üì• Klone GitHub Repository..."
if [ -d "Ki-monster-philipp" ]; then
    echo "üìÅ Repository existiert bereits, verwende existierendes..."
    cd Ki-monster-philipp
else
    gh repo clone R3MiX9002/Ki-monster-philipp
    cd Ki-monster-philipp
fi

# Add GitLab remote
echo "ü¶ä F√ºge GitLab Remote hinzu..."
git remote remove gitlab 2>/dev/null || true  # Remove if exists
git remote add gitlab https://gitlab.com/R3MiX9002/Ki-monster-philipp.git

echo "‚úÖ Repository Setup abgeschlossen!"
echo "üîç Verf√ºgbare Remotes:"
git remote -v
echo ""

# ===================================================================
# SCHRITT 2: ALLE VERZEICHNISSE ERSTELLEN
# ===================================================================

echo "üìÅ SCHRITT 2: Verzeichnisstruktur erstellen..."
echo "--------------------------------------------"

# Create all necessary directories
mkdir -p .github/workflows
mkdir -p src/services
mkdir -p src/components
mkdir -p integration
mkdir -p docs
mkdir -p scripts
mkdir -p config
mkdir -p assets

echo "‚úÖ Verzeichnisstruktur erstellt!"
echo ""

# ===================================================================
# SCHRITT 3: HAUPT-INDEX.HTML ERSTELLEN
# ===================================================================

echo "üìÑ SCHRITT 3: Enhanced index.html erstellen..."
echo "---------------------------------------------"

cat > index.html << 'EOF'
