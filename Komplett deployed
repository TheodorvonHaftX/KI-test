    <!-- Enhanced React App Script -->
    <script type="text/babel">
        const { useState, useRef, useEffect, createElement: h } = React;
        const { Search, Image, Video, FileText, Zap, Settings, Minimize2, Square, X, RefreshCw, 
                Cloud, HardDrive, Upload, Download, Folder, Trash2, Info, Check, AlertCircle } = lucide;

        const KiMonsterPhilippV2Enhanced = () => {
            const [activeFunction, setActiveFunction] = useState('search');
            const [isLoading, setIsLoading] = useState(false);
            const [searchQuery, setSearchQuery] = useState('');
            const [generatedContent, setGeneratedContent] = useState('');
            const [windowMinimized, setWindowMinimized] = useState(false);
            const [currentPlatform, setCurrentPlatform] = useState('unknown');
            
            const functions = {
                search: { icon: Search, name: 'Recherche-Synthesizer', color: '#4A90E2' },
