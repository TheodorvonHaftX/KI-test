                    h('div', { 
                        className: "bg-gradient-to-r from-slate-700 via-slate-600 to-slate-700 rounded-t-lg px-4 py-2 flex items-center justify-between border border-slate-500 shadow-lg" 
                    },
                        h('div', { className: "flex items-center space-x-3" },
