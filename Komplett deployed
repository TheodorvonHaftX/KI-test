                            h('div', { className: "text-white mb-6" },
                                h('h2', { className: "text-lg font-bold mb-2" }, "Enhanced Functions"),
                                h('p', { className: "text-xs text-slate-300" }, "Dual Platform Multimedia Creator"),
                                h('div', { className: "mt-2 text-xs" },
                                    h('div', { className: `inline-block px-2 py-1 rounded text-white ${currentPlatform === 'github' ? 'bg-gray-800' : currentPlatform === 'gitlab' ? 'bg-orange-600' : 'bg-blue-600'}` }, 
                                        currentPlatform === 'github' ? 'üêô GitHub' : 
                                        currentPlatform === 'gitlab' ? 'ü¶ä GitLab' : 
                                        'üíª Local'
                                    )
                                )
                            ),
                            
                            h('div', { className: "space-y-2" },
                                Object.entries(functions).map(([key, func]) =>
                                    h('button', {
                                        key,
                                        onClick: () => setActiveFunction(key),
                                        className: `w-full p-3 rounded-lg transition-all duration-200 flex items-center space-x-3 vista-button ${
                                            activeFunction === key ? 'bg-white/20 border-white/30 shadow-lg' : ''
                                        }`
                                    },
                                        h(func.icon, { className: "w-5 h-5", style: { color: func.color } }),
                                        h('span', { className: "text-white text-sm font-medium" }, func.name)
                                    )
                                )
                            ),
                            
                            h('div', { className: "mt-8 p-3 vista-glass rounded-lg" },
                                h('h3', { className: "text-white text-sm font-semibold mb-2" }, "Platform Status"),
                                h('div', { className: "space-y-2" },
                                    h('div', { className: "flex items-center justify-between" },
                                        h('span', { className: "text-slate-300 text-xs" }, "GitHub Pages"),
                                        h('div', { className: `w-2 h-2 rounded-full ${currentPlatform === 'github' ? 'bg-green-400' : 'bg-gray-400'}` })
                                    ),
                                    h('div', { className: "flex items-center justify-between" },
                                        h('span', { className: "text-slate-300 text-xs" }, "GitLab Pages"),
